generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(uuid())
  clerkId String @unique // Clerk user ID
  chats   Chat[]
}

model Chat {
  id        String    @id @default(uuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String    @default("New Chat")
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id              String      @id @default(uuid())
  chatId          String
  chat            Chat        @relation(fields: [chatId], references: [id], onDelete: Cascade)
  role            MessageRole // "user" or "assistant" or "shellOutput"
  text            String
  mode            Mode        @default(Prompt) // Enum for "Prompt" or "Command"
  cwd             String      @default("empty_cwd") // Current working directory
  pageNumber      Int?
  chapterName     String?
  containerExpiry String?
  createdAt       DateTime    @default(now())
}

enum MessageRole {
  User
  Assistant
  ShellOutput
}

enum Mode {
  Prompt
  Command
}
